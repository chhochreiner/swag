
		<persistence
			xmlns              = "http://java.sun.com/xml/ns/persistence"
			xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
			xsi:schemaLocation = "http://java.sun.com/xml/ns/persistence
	                          http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" 
			version            = "1.0">

			<persistence-unit name="swag">
				<provider>org.hibernate.ejb.HibernatePersistence</provider>
	
				
					<class>swag.domain.Message</class>
				
					<class>swag.domain.User</class>
				
					<class>swag.domain.Map</class>
				
					<class>swag.domain.MapUser</class>
				
					<class>swag.domain.StoredRessource</class>
				
					<class>swag.domain.Square</class>
				
					<class>swag.domain.RessourceBuilding</class>
				
					<class>swag.domain.BaseBuilding</class>
				
					<class>swag.domain.Boost</class>
				
					<class>swag.domain.Troop</class>
				
					<class>swag.domain.Soldier</class>
				
	
				<properties>
					<!-- Database connection settings -->
					<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
					<property name="hibernate.connection.url"          value="jdbc:postgresql://localhost/swa"/>
					<property name="hibernate.connection.username"     value="swa" />
					<property name="hibernate.connection.password"     value="swa11" />
	
					<!-- JDBC connection pool (use the built-in) -->
					<property name="hibernate.connection.pool_size" value="1" />
		
					<!-- SQL dialect -->
					<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />

					
						<!-- Echo all executed SQL to stdout -->
						<property name="hibernate.show_sql" value="true" />
					

					
						<!-- Drop and re-create the database schema on startup -->
						<property name="hibernate.hbm2ddl.auto"            value="update" />
						<property name="javax.persistence.validation.mode" value="none" />
					
				</properties>
			</persistence-unit>
		</persistence>
	